pipeline {
    
    agent {
            // Run this job within a Docker container built using Dockerfile.build
            // contained within your projects repository. This image should include
            // the core runtimes and dependencies required to run the job,
            // for example Python 3.x and NPM.
            dockerfile { filename 'Dockerfile.build' }
        }

    stages{
        // If you are having issues with your project not getting updated, 
        // try uncommenting the following lines.
        // stage('Checkout'){
        //     steps{
        //     checkout scm
        //     sh 'git submodule update --init --recursive'

        //     }
        // }

        
    
        stage('Update Python Modules') {
            steps{

            // Create a virtualenv in this folder, and install or upgrade packages
            // specified in requirements.txt; https://pip.readthedocs.io/en/1.1/requirements.html
                sh 'virtualenv env && source env/bin/activate && pip install --upgrade -r requirements.txt'

            }
    
        } 
        stage('Test') {
            steps{
                
                // Invoke Django's tests
                sh 'source env/bin/activate && python ./manage.py test'

            }
            
        }

        stage('Push Image') {
            steps{
                docker.withRegistry('https://registry.hub.docker.com', 'docker') {
                    app.push('$(env.BUILD_NUMBER)')
                    app.push('latest')
                }
            }
        }  
    }
}



 
